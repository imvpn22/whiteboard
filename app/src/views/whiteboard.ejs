<!doctype html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>White Board</title>
	<link href="assets/css/style.css" rel="stylesheet" />
	<link href="assets/css/chat.css" rel="stylesheet" />

	<script src="/assets/js/jquery-3.2.1.min.js"></script>
	<script src="https://use.fontawesome.com/d4ad1e750c.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.slim.js"></script>
</head>
<body>
	<div class="main-container">
		<div class="hidden" id="groups_panel_back"></div>
		<div class="group-panel hidden" id="groups_nav">
			<div class="group-panel-title">
				<span>Your Groups</span>
			</div>
			<div class="group-panel-item">
				<span>Group 1</span>
			</div>
			<div class="group-panel-item">
				<span>Group 2</span>
			</div>
			<div class="group-panel-item">
				<span>Group 3</span>
			</div>
			<div class="group-panel-item active">
				<span>Group 4</span>
			</div>
			<div class="group-panel-item">
				<span>Group 5</span>
			</div>
		</div>
		<div class="chat-nav">
			<button class="head-btn pos-left" id="open_groups_nav"><i class="fa fa-bars" aria-hidden="true"></i></button>
			<span>Group Title</span>
			<button class="head-btn pos-right" id="user_btn"><i class="fa fa-user" aria-hidden="true"></i></button>
		</div>
		<div class="user-popup hidden" id="user_popup">
			<div class="user-popup-item" id="profile_btn">
				<span >Profile</span>
			</div>
			<div class="user-popup-item" id="logout_btn">
				<span >Logout</span>
			</div>
		</div>
		<div class="main-container-content">
			<div class="chat-window">
				<div class="chats" id="chats">
					<div class="msg">
						<span class="msg-owner">aw123</span>
						<span class="msg-text">hello! how are u doing.</span>
					</div>
					<div class="msg">
						<span class="msg-owner">blendit07</span>
						<span class="msg-text">I am doing fine! how are u doing.</span>
					</div>

				</div>
				<div class="msg-bar">
					<div class="new-attach"><i class="fa fa-paperclip" aria-hidden="true"></i></div>
					<div class="new-msg" >
						<input type="text" id="new-msg" name="newMessage" placeholder="Type a message" autofocus>

					</div>
					<div class="send-msg" id="send-msg"><i class="fa fa-paper-plane" aria-hidden="true"></i></div>
				</div>

			</div>

			<div class="wb-window"><div class="tools-panel">
				<div class="draw-tools">
					<div class="tool-items">
						<span class="panel-items-title">Tools</span>
						<div class="tool-item" id="tool-pen"> <i class="fa fa-pencil" aria-hidden="true"></i></div>
						<div class="tool-item" id="tool-eraser"><i class="fa fa-eraser" aria-hidden="true"></i> </div>
					</div>
					<div class="width-bar">
						<div class="">
							<input type="range" id="tool-size" min="2" max="25" value="2">
						</div>
					</div>

				</div>
				<div class="color-palate">
					<div class="tool-items">
						<span class="panel-items-title">Colors</span>
						<div class="tool-item clr-box clr-box-active" style="background: #000"></div>
						<div class="tool-item clr-box" style="background: #555"></div>
						<div class="tool-item clr-box" style="background: #aaa"></div>
						<div class="tool-item clr-box" style="background: #fff"></div>
						<div class="tool-item clr-box" style="background: #f0b"></div>
						<div class="tool-item clr-box" style="background: #f06"></div>
						<div class="tool-item clr-box" style="background: #f00"></div>
						<div class="tool-item clr-box" style="background: #f60"></div>
						<div class="tool-item clr-box" style="background: #fb0"></div>
						<div class="tool-item clr-box" style="background: #ff0"></div>
						<div class="tool-item clr-box" style="background: #bf0"></div>
						<div class="tool-item clr-box" style="background: #6f0"></div>
						<div class="tool-item clr-box" style="background: #0f0"></div>
						<div class="tool-item clr-box" style="background: #0f6"></div>
						<div class="tool-item clr-box" style="background: #0fb"></div>
						<div class="tool-item clr-box" style="background: #0ff"></div>
						<div class="tool-item clr-box" style="background: #0bf"></div>
						<div class="tool-item clr-box" style="background: #06f"></div>
						<div class="tool-item clr-box" style="background: #00f"></div>
						<div class="tool-item clr-box" style="background: #60f"></div>
						<div class="tool-item clr-box" style="background: #b0f"></div>
						<div class="tool-item clr-box" style="background: #f0f"></div>
					</div>
				</div>
			</div>
			<div id="wb-canvas-wrapper">
				<canvas id="wb-canvas"></canvas>
			</div>
		</div>
	</div>
</div>


<script src="/assets/js/main.js"></script>
<script src="/assets/js/auth.js"></script>
<script src="/assets/js/chat-handler.js"></script>
<script src="/assets/js/wbCanvas.js" type="text/javascript"></script>
</body>
</html>
